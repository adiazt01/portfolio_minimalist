---
import { CERTIFICATES } from "../../data/Certifications";
---

<section class="mt-12 w-full">
  <h2 class="text-3xl font-medium text-center sm:text-left">Certificados</h2>
  <ol class="relative border-s border-gray-200">
    {
      CERTIFICATES.map((certificate, index) => (
        <li class="mb-10 ms-4">
          <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"></div>
          <time class="mb-1 text-sm font-normal leading-none text-gray-400">
            February 2022
          </time>
          <h3 class="text-lg font-semibold text-gray-900" />
          <p class="mb-4 text-base font-normal text-gray-500">
            Learn how to build a responsive web application using Tailwind CSS
            and JavaScript
          </p>
          <a href="#" class="text-base font-semibold text-green-600">
            Ver certificado
          </a>
        </li>
      ))
    }
  </ol>
</section>
