---
import { CERTIFICATES } from "../../data/Certifications";
import { Calendar, Link } from "../icons";
---

<section class="mt-12 w-full">
  <h2 class="text-3xl font-medium text-center sm:text-left">Certificados</h2>
  <ol class="relative mt-4 border-s border-gray-300">
    {
      CERTIFICATES.map((certificate, index) => (
        <li class="mb-10 flex flex-col w-full gap-1 ms-4">
          <div class="absolute w-3 h-3 bg-green-300 rounded-full mt-1.5 -start-1.5 border border-white" />
          <h3 class="text-lg font-semibold text-gray-900">
            {certificate.title}
          </h3>
          <time class="mb-1 text-sm font-normal flex flex-row items-center gap-2 leading-none text-gray-500">
            <Calendar />
            {certificate.date}
          </time>
          <p class="mb-4 text-sm font-normal text-gray-700">
            {certificate.description}
          </p>
          <a
            href={`${certificate.url}`}
            target="_blank"
            rel="noopener noreferrer"
            class="text-base mr-auto flex flex-row gap-2 items-center font-semibold text-green-700 hover:text-green-600 transition hover:scale-105"
          >
            <Link />
            Ver certificado
          </a>
        </li>
      ))
    }
  </ol>
</section>
